            <label value="OPD System" style="font-size:20px;margin-left:5px;" width="150px" />
            <button class="sdaaa" src="${z.resource(dir:'images',file:'pic4-01.png')}" id="btn1" label="Register System >>" href="/registers/login.zul" />
            <button src="${z.resource(dir:'images',file:'pic1-01.png')}" class="sdaaa" id="screening" label="Screening System >>" href="/login2.zul"/>
               <button src="${z.resource(dir:'images',file:'pic6-01.png')}" class="sdaaa" id="doctor" label="Doctor System >>" href="/doctor/doctor.zul" />
                  <button src="${z.resource(dir:'images',file:'pic7-01.png')}" class="sdaaa" id="transfer" label="Transfer System >>" href="/transfer/logintransfer.zul"/>
                     <button src="${z.resource(dir:'images',file:'pic8-01.png')}" class="sdaaa" id="medicine" label="Medicine System >>" href="/medicine/medicineLogin.zul"/>
                        <button src="${z.resource(dir:'images',file:'pic10-01-01.png')}" class="sdaaa" id="finance" label="Finance System >>" href="/finance/pricelogin.zul"/>
        </vbox>


            
